{
  "general": {
    "description": "index de test de documents",
    "label": "testdocs",
    "indexName": "testdocs"
  },
 "indexation": {
    "deleteOldIndex": true,
   "elasticUrl": "http://localhost:9200/"
  },
  "connector": {
    "type": "fs",
    "dir": "D:\\ATD_Baillet\\testIndexation"

  },
  "settings": {
    "analysis": {
      "filter": {
        "stemmer_filter": {
          "type": "stemmer",
          "language": "french"
        }
      },
      "analyzer": {
        "ATD": {
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "asciifolding",
            "stemmer_filter"
          ]
        }
      }
    }
  },
  "schema": {
    "settings": {},
    "mappings": {
      "testdocs": {
        "properties": {
          "author": {
            "type": "text"
          },
          "attachment.content": {
            "type": "text",
            "index_options": "offsets",
            "fields": {
              "contentKeyWords": {
                "type": "keyword",
                "ignore_above": 256
              }
            },
            "fielddata": true
          },
          "date": {
            "type": "text"
          },
          "path": {
            "type": "text"
          },
          "title": {
            "type": "text"
          }
        }
      }
    }
  },
  "display": {
    "list": [
      {
        "title": {
          "cssClass": "titleList"
        }
      },
      {
        "date": {
          "cssClass": "date"
        }
      },
      {
        "author": {
          "cssClass": "list"
        }
      },
      {
        "excerpt": {
          "cssClass": "excerpt"
        }
      }
    ],
    "details": [
      {
        "title": {
          "cssClass": "title",
          "labelFr": "Titre"
        }
      },
      {
        "date": {
          "cssClass": "date",
          "labelFr": "Date"
        }
      },
      {
        "author": {
          "cssClass": "details",
          "labelFr": "Auteur"
        }
      },
      {
        "content": {
          "cssClass": "text",
          "labelFr": "Contenu",
          "highlightWords": 1
        }
      }
    ],
    "csv": [
    ]
  }
}
